<p id="notice"><%= notice %></p>

<h1>Easy Posts</h1>

<table>
  <thead>
    <tr>
      <th>Address</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @easy_posts.each do |easy_post| %>
      <tr>
        <td><%= easy_post.address %></td>
        <td><%= link_to 'Show', easy_post %></td>
        <td><%= link_to 'Edit', edit_easy_post_path(easy_post) %></td>
        <td><%= link_to 'Destroy', easy_post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Easy Post', new_easy_post_path %>
